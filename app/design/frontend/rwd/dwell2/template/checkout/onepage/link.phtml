<div class="continue_shopping">
	<a href="<?php echo $this->getUrl() ?>" title="<?php echo $this->__('Continue Shopping') ?>" class="continue-shopping"><?php echo $this->__('Continue Shopping') ?></a>
</div>
<?php if ($this->isPossibleOnepageCheckout()):?>
	<script type="text/javascript">
		function proceedToCheckout() {
			var code = $('coupon_code').value;
			if (code == '') {
				window.location='<?php echo $this->getCheckoutUrl() ?>';
			} else {
				$jj = jQuery.noConflict();
			   	$jj.post(
			   		"/checkout/cart/couponPostAjax/",
			   		{"coupon_code" : code},
			   		function(data) {
			   			var response = $jj.parseJSON(data);
			   			if (response['status'] == 'error') {
			   				window.location = window.location;
			   			} else {
							window.location='<?php echo $this->getCheckoutUrl() ?>';
						}
			   		}
			   	);
			   	return false;
			}
		}
	</script>
	
    <button type="button" title="<?php echo $this->__('Checkout') ?>" class="button btn-proceed-checkout btn-checkout<?php if ($this->isDisabled()):?> no-checkout<?php endif; ?>"<?php if ($this->isDisabled()):?> disabled="disabled"<?php endif; ?> onclick="proceedToCheckout();"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
<?php endif?>
