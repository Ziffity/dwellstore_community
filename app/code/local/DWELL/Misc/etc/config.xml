                                         <newsletter_text>
                                            <title>Newsletter Texts</title>
                                        </newsletter_text>
                                         <homepage_text>
                                            <title>Homepage Texts</title>
                                        </homepage_text>       
                                        <disclaimer_text>
                                            <title>Disclaimer Message</title>
