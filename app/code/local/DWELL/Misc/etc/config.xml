			<misc>
				<class>DWELL_Misc_Helper</class>
			</misc>
		</helpers>
	</global>
	<adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
